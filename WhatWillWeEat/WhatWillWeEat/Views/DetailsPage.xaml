<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WhatWillWeEat.Views.DetailsPage"
             Title="Детайли за ястието">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="2">
                <Label FontSize="Medium" Text="Име:"/>
                <Entry x:Name="nameEntry" IsReadOnly="True"/>
                <Label FontSize="Medium" Text="Съставки:"/>
                <Editor x:Name="itemsEditor" IsReadOnly="True" AutoSize="TextChanges"/>
                <Label FontSize="Medium" Text="Начин на приготвяне:"/>
                <Editor x:Name="recipeEditor" IsReadOnly="True" VerticalOptions="Fill" AutoSize="TextChanges"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>